<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:amq="http://activemq.apache.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd


http://activemq.apache.org/schema/core
http://activemq.apache.org/schema/core/activemq-core.xsd">

    <context:component-scan base-package="de.fhkoeln.eis.radioexpert"/>

    <amq:connectionFactory id="jmsConnectionFactory"
                           brokerURL="vm://localhost"/>

    <amq:topic id="technician" physicalName="technician"/>
    <amq:topic id="presenter" physicalName="presenter"/>
    <amq:topic id="director" physicalName="director"/>

    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="jmsConnectionFactory"/>
        <property name="defaultDestination" ref="director"/>
    </bean>
</beans>